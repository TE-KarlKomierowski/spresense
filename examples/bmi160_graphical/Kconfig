#
# For a description of the syntax of this configuration file,
# see the file kconfig-language.txt in the NuttX tools repository.
#

config EXAMPLES_BMI160_GRAPHICAL
	bool "Bosch BMI160 graphical demo"
	default n
	depends on BMI160
	select CXD56_SPI
	select CXD56_SPI4
	select LCD_ILI9340
	select LCD_ILI9340_IFACE0

	---help---
		Enable the 6 axis sensor example

if EXAMPLES_BMI160_GRAPHICAL

config EXAMPLES_BMI160_GRAPHICAL_PROGNAME
	string "Program name"
	default "BMI160_GRAPHICAL"
	depends on BUILD_KERNEL
	---help---
		This is the name of the program that will be use when the NSH ELF
		program is installed.

config EXAMPLES_BMI160_GRAPHICAL_PRIORITY
	int "BMI160 graphical demo task priority"
	default 100

config EXAMPLES_BMI160_GRAPHICAL_STACKSIZE
	int "BMI160 graphical demo stack size"
	default 2048

endif
